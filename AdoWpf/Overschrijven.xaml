<Window x:Class="AdoWpf.Overschrijven"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overschrijven" Height="300" Width="300">
    <Grid>
        <Label VerticalAlignment="Top" Margin="10,10,0,0">Van Rekening Nr.:</Label>
        <TextBox Name="textBoxVanRekNr" Width="100" Height="25" VerticalAlignment="Top" Margin="150,10,0,0"></TextBox>
        <Label VerticalAlignment="Top" Margin="10,40,0,0">Naar Rekening Nr.:</Label>
        <TextBox Name="textBoxNaarRekNr" Width="100" Height="25" VerticalAlignment="Top" Margin="150,40,0,0"></TextBox>
        <Label VerticalAlignment="Top" Margin="10,70,0,0">Bedrag:</Label>
        <TextBox Name="textBoxBedrag" Width="100" Height="25" VerticalAlignment="Top" Margin="150,70,0,0"></TextBox>
        <Button Name="buttonOverschrijven" Width="80" Height="25" Margin="150,00,0,0" Click="buttonOverschrijven_Click">Overschrijven</Button>
        <Label Name="labelStatus" Content="Leeg maken" Margin="10,120,0,0" Width="250" Height="25"></Label>
    </Grid>
</Window>
