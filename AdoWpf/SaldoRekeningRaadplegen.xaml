<Window x:Class="AdoWpf.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <Grid>
        <Label VerticalAlignment="Top" Margin="10,10,0,0">Rekening Nr.:</Label>
        <TextBox Name="textBoxRekeningNr" Width="150" Height="25" VerticalAlignment="Top" Margin="50,10,0,0"></TextBox>
        <Button Name="buttonSaldo" Width="150" Height="25" Margin="50,50,0,0" VerticalAlignment="Top" Click="buttonSaldo_Click" >Saldo</Button>
        <Label Name="labelStatus" Content="Leeg maken" Margin="10,120,0,0" Width="250" Height="25"></Label>
        
    </Grid>
</Window>
