<Window x:Class="AdoWpf.RekeningInfoRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RekeningInfoRaadplegen" Height="300" Width="300">
    <Grid>
        <Label VerticalAlignment="Top" Margin="10,10,0,0">Rekening Nr.:</Label>
        <TextBox Name="textBoxRekeningNr" Width="150" Height="25" VerticalAlignment="Top" Margin="50,10,0,0">Leeg maken</TextBox>
        <Button Name="buttonInfo" Width="150" Height="25" Margin="50,50,0,0" VerticalAlignment="Top" Click="buttonInfo_Click" >Info</Button>
        <Label Name="labelSaldo" Content="Leeg maken" Margin="10,10,0,0" Width="250" Height="25"></Label>
        <Label Name="labelKlantNaam" Content="Leeg maken" Margin="10,80,0,0" Width="250" Height="25"></Label>
        <Label Name="labelStatus" Content="Leeg maken" Margin="10,140,0,0" Width="250" Height="25"></Label>
    </Grid>
</Window>
