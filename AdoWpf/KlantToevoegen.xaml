<Window x:Class="AdoWpf.KlantToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KlantToevoegen" Height="300" Width="300">
    <Grid>
        <Label VerticalAlignment="Top" Margin="10,10,0,0">Naam:</Label>
        <TextBox Name="textBoxNaam" Width="150" Height="25" VerticalAlignment="Top" Margin="50,10,0,0">Leeg Maken</TextBox>
        <Button Name="buttonToevoegen" Width="150" Height="25" Margin="50,50,0,0" VerticalAlignment="Top" Click="buttonToevoegen_Click">Toevoegen</Button>
        <Label Name="labelStatus" Content="Leeg maken" Margin="10,140,0,0" Width="250" Height="25"></Label>
    </Grid>
</Window>
